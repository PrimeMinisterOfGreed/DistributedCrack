{
    "version": 8,
    "configurePresets": [
        {
            "name": "clang",
            "displayName": "clang",
            "description": "clang",
            "binaryDir": "build",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "install",
                "CMAKE_C_COMPILER": "/usr/bin/clang-19",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++-19",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "ENABLE_UNIT_TEST": true
            }
        },
        {
            "name": "gcc",
            "displayName": "gcc",
            "description": "Uso dei compilatori: C = /usr/bin/gcc, CXX = /usr/bin/g++",
            "binaryDir": "build",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "install",
                "CMAKE_C_COMPILER": "/usr/bin/gcc-12",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++-12",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "ENABLE_UNIT_TEST": true
            }
        },
        {
            "name": "gcc-release",
            "inherits":"gcc",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE":"Release"
            }
        }
    ],
    "testPresets": [
        {
            "name": "clang-test",
            "description": "",
            "displayName": "",
            "configurePreset": "clang"
        }
    ]
}